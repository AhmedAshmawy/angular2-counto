{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "sourceMap": true,
        "inlineSources": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [ "es2015", "dom" ],
        "noImplicitAny": true,
        "suppressImplicitAnyIndexErrors": true,
        "declaration": true
      },
      "exclude": [
          "node_modules",
          "example",
          "tests"
      ],
      "include": [
          "index.ts",
          "src/*"
      ]
}
